        "typedoc": "^0.14.0",
        "typescript": "^3.2.2"
    },
    "keywords": [
        "binary",
        "bits",
        "datastructure",
        "ES6",
        "iterator",
        "stream",
        "typescript"
    ],
    "publishConfig": {
        "access": "public"
    }
}