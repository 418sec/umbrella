{
    "name": "@thi.ng/csp",
    "version": "0.3.0",
    "description": "ES6 promise based CSP implementation",
    "main": "./index.js",
    "typings": "./index.d.ts",
    "repository": "https://github.com/thi-ng/csp",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn run clean && tsc --declaration",
        "test": "yarn run clean && tsc -p test && mocha build/test/*.js",
        "testasync": "tsc -p test && node build/test/async.js",
        "testfile": "tsc -p test && node build/test/file.js",
        "testgraph": "tsc -p test && node build/test/graph.js",
        "testnode": "tsc -p test && node build/test/node.js",
        "clean": "rm -rf *.js *.d.ts build doc utils",
        "pub": "yarn run build && (cd build && yarn publish --access public)"
    },
    "devDependencies": {
        "mocha": "^5.0.0",
        "typedoc": "^0.9.0",
        "typescript": "^2.6.2",
        "ts-loader": "^3.3.1",
        "webpack": "^3.10.0",
        "@types/mocha": "^2.2.46",
        "@types/node": "^9.3.0"
    },
    "dependencies": {
        "@thi.ng/api": "^1.2.0",
        "@thi.ng/dcons": "^0.1.3",
        "@thi.ng/transducers": "^0.11.0"
    },
    "keywords": [
        "async",
        "csp",
        "channel",
        "ES6",
        "pipeline",
        "promise",
        "transducers",
        "typescript"
    ],
    "publishConfig": {
        "access": "public"
    }
}