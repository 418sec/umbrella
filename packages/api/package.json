{
    "name": "@thi.ng/api",
    "version": "1.2.0",
    "description": "Common, generic types & interfaces for thi.ng projects",
    "main": "./index.js",
    "typings": "./index.d.ts",
    "repository": "https://github.com/thi-ng/api",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
