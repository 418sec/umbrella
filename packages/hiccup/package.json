        "test": "rm -rf build && tsc -p test && mocha build/test/*.js"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.46",
        "@types/node": "^9.3.0",
        "mocha": "^5.0.0",
        "ts-loader": "^3.3.1",
        "typedoc": "^0.9.0",
        "typescript": "^2.6.2",
        "webpack": "^3.10.0"
    },
    "keywords": [
        "ES6",
        "clojure",
        "components",
        "hiccup",
        "html",
        "iterators",
        "json",
        "serialization",
        "svg",
        "template",
        "typescript",
        "xml"
    ],
    "publishConfig": {
        "access": "public"
    }
}