{
    "name": "@thi.ng/compose",
    "version": "0.3.0",
    "description": "Functional composition helpers",
    "main": "./index.js",
    "typings": "./index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/thi-ng/umbrella.git"
    },
    "homepage": "https://github.com/thi-ng/umbrella/tree/master/packages/compose",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn clean && tsc --declaration",
        "clean": "rimraf *.js *.d.ts .nyc_output build coverage doc",
        "cover": "yarn test && nyc report --reporter=lcov",
        "doc": "node_modules/.bin/typedoc --mode modules --out doc src",
        "pub": "yarn build && yarn publish --access public",
        "test": "rimraf build && tsc -p test && nyc mocha build/test/*.js"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.15",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "typedoc": "^0.14.0",
        "typescript": "^3.2.2"
    },
    "dependencies": {
        "@thi.ng/api": "^4.2.4",
        "@thi.ng/errors": "^0.1.12"
    },
    "keywords": [
        "composition",
        "ES6",
        "functional",
        "typescript"
    ],
    "publishConfig": {
        "access": "public"
    }
}