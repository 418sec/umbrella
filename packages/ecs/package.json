{
    "name": "@thi.ng/ecs",
    "version": "0.3.0",
    "description": "Entity Component System based around typed arrays & sparse sets",
    "module": "./index.js",
    "main": "./lib/index.js",
    "umd:main": "./lib/index.umd.js",
    "typings": "./index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/thi-ng/umbrella.git"
    },
    "homepage": "https://github.com/thi-ng/umbrella/tree/master/packages/ecs",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn clean && yarn build:es6 && node ../../scripts/bundle-module",
        "build:release": "yarn clean && yarn build:es6 && node ../../scripts/bundle-module all",
        "build:es6": "tsc --declaration",
        "build:test": "rimraf build && tsc -p test/tsconfig.json",
        "test": "mocha test",
        "cover": "nyc mocha test && nyc report --reporter=lcov",
        "clean": "rimraf *.js *.d.ts .nyc_output build coverage doc lib",
        "doc:readme": "../../scripts/generate-readme",
        "doc:ae": "mkdir -p .ae/doc .ae/temp && node_modules/.bin/api-extractor run --local --verbose",
        "doc": "node_modules/.bin/typedoc --mode modules --out doc src",
        "pub": "yarn build:release && yarn publish --access public"
    },
    "devDependencies": {
        "@istanbuljs/nyc-config-typescript": "^1.0.1",
        "@microsoft/api-extractor": "^7.7.7",
        "@thi.ng/equiv": "^1.0.12",
        "@types/mocha": "^5.2.7",
        "@types/node": "^13.5.0",
        "mocha": "^7.0.0",
        "nyc": "^15.0.0",
        "ts-node": "^8.6.2",
        "typedoc": "^0.16.8",
        "typescript": "^3.7.5"
    },
    "dependencies": {
        "@thi.ng/api": "^6.7.0",
        "@thi.ng/associative": "^3.1.2",
        "@thi.ng/binary": "^1.2.1",
        "@thi.ng/checks": "^2.5.0",
        "@thi.ng/dcons": "^2.2.1",
        "@thi.ng/idgen": "^0.2.0",
        "@thi.ng/transducers": "^6.2.0"
    },
    "keywords": [
        "ES6",
        "typescript"
    ],
    "publishConfig": {
        "access": "public"
    },
    "sideEffects": false,
    "thi.ng": {
        "status": "alpha",
        "year": 2019
    }
}
