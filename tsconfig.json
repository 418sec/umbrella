{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "declaration": true,
        "declarationMap": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "isolatedModules": true
    },
    "exclude": ["./**/node_modules"]
}
